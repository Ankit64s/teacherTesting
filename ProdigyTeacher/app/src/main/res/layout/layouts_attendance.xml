<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardBackgroundColor="#DAB2B2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:text="Name: "
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stuname"
                android:layout_toRightOf="@id/text1"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borderedittext"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DAB2B2"
                android:id="@+id/r12"
                android:layout_below="@+id/stuname"/>



            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/text12"
                android:layout_below="@id/r12"
                android:text="Roll No: "
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sturoll"
                android:layout_toRightOf="@id/text12"
                android:layout_below="@id/r12"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borderedittext"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DAB2B2"
                android:id="@+id/r2"
                android:layout_below="@+id/sturoll"/>



            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/text2"
                android:layout_below="@id/r2"
                android:text="Class: "
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stuclass"
                android:layout_toRightOf="@id/text2"
                android:layout_below="@id/r2"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borderedittext"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DAB2B2"
                android:id="@+id/r3"
                android:layout_below="@+id/stuclass"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:layout_below="@id/r3"
                android:text="Section: "
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stusection"
                android:layout_toRightOf="@id/text3"
                android:layout_below="@id/r3"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borderedittext"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DAB2B2"
                android:id="@+id/r4"
                android:layout_below="@+id/stusection"/>

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/text4"
                android:layout_below="@id/r4"
                android:text="Attendance: "
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stuattendance"
                android:layout_toRightOf="@id/text3"
                android:layout_below="@id/r4"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/borderedittext"
                android:textStyle="italic"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#DAB2B2"
                android:id="@+id/r5"
                android:layout_below="@+id/stuattendance"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/r5"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="#F39408"
                android:fontFamily="serif-monospace"
                android:background="@drawable/borderedittext"
                android:textStyle="italic"
                android:text="Present"
                android:layout_marginBottom="20dp"
                android:id="@+id/present"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>